
@{
    ViewBag.Title = "MeusAlugueis";
    Layout = "~/Areas/AreaRestrita/Views/Shared/Layout.cshtml";
}

@section scripts{
    <script src="~/js/jquery.mask.min.js"></script>

    <script src="~/Page_Js/meus_alugueis.js"></script>
}

<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="content-main">

        <!--banner-->
        <div class="banner">
            <h2>
                <a href="/AreaRestrita/Home">Home</a>
                <i class="fa fa-angle-right"></i>
                <span>Meus Alugueis</span>
            </h2>
        </div>
        <!--//banner-->
        <!--grid-->
        <div class="grid-form">
            <!---->
            <div class="grid-form1">
                <h3>Meus Alugueis</h3>
                <div class="tab-content">
                    <div class="tab-pane active" id="horizontal-form">
                        <div id="mensagem"></div>
                        <table id="tabela" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Data</th>
                                    <th>Hora Inicio</th>
                                    <th>Hora Final</th>
                                    <th>Nome do Evento</th>
                                    <th>Nome do Espaço</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>

                            <tbody></tbody>

                            <tfoot>
                                <tr>
                                    <td colspan="7">
                                        Quantidade de Alugueis: <span style="color:black" id="quantidade"></span>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div id="modal"></div>
        </div>
        <!--//grid-->
        <!---->
    </div>
</div>
<div class="clearfix"> </div>

